<section class="content-header">
<h1>Items To Add: </h1>
</section>
<section class="content">
	<div class="box box-success">
		<%= simple_form_for [:management, @item_type], defaults: { wrapper_html: { class: 'form-group' }, input_html: {class: 'form-control'} }, html: { multipart: true, novalidate: true } do |it| %>
			<form role="form">
				<div class="box-body">
	        <%= it.association :item_category, as: :select, collection: ItemCategory.all %>
	 			</div>
				<div class="box-body">
					<div class="form-group">
					<%= it.input :name %>
					</div>
					<div class="form-group">
						<%= it.input :description %>
					</div>
				</div>
				<div class="box-footer">
					<button class="btn btn-success"><i class="save icon"></i>SAVE</button>
				</div>
			</form>
		<% end %>
	</div>
</section>