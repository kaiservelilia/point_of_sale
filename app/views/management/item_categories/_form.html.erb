<section class="content-header">
	<h1>Items To Add:</h1> 
</section>
	<section class="content">
		<div class="well">
			<div class="box box-success">
				<%= simple_form_for [:management, @item_category], defaults: { wrapper_html: { class: 'form-group' }, input_html: {class: 'form-control'} }, html: { multipart: true, novalidate: true } do |ic| %>
					<form role="form">
						<div class="box-body">
							<div class="form-group">
							<%= ic.input :name %>
							</div>
							<div class="form-group">
								<%= ic.input :description %>
							</div>
						</div>
						<div class="box-footer">
							<button class="btn btn-success"><i class="save icon"></i>SAVE</button>
						</div>
					</form>
				<% end %>
			</div>
		</div>
	</section>