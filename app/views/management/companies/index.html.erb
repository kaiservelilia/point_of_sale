<section class="content-header">
<h1>Company Profile</h1>

<!-- dito ilalagay yung logo o avatar na iaaupload -->
</section>
<section class="content">
  <div class="row">
    <div class="col-md-3">
      <div class="box box-success">
        <div class="box-header with-border">
          <h3 class="box-title">About Us</h3>
        </div>
        <div class="box-body">
        <% @companies.each do |company| %>
          <strong><i class="fa fa-book margin-r-5"></i>  Company</strong>
           <br> <%= company.company_name %>
          <hr>
          <strong><i class="fa fa-book margin-r-5"></i>  Website</strong>
            <br><%= company.website %>
          <hr>
          <strong><i class="fa fa-map-marker margin-r-5"></i> Location</strong>
           <br> <%= company.address %>
          <hr>
          <strong><i class="fa fa-pencil margin-r-5"></i> Telephone number</strong>
            <br><%= company.telephone %>
          <hr>
          <strong><i class="fa fa-file-text-o margin-r-5"></i> Notes</strong>
          <br><p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Etiam fermentum enim neque.</p>
        </div>
      </div>
    </div>
    <div class="col-md-9">
      <div class="nav-tabs-custom">
        <ul class="nav nav-tabs">
          <li class="active"><a href="#activity" data-toggle="tab">Activity</a></li>
        </ul>
        <div class="tab-content">
          <div class="active tab-pane" id="activity">
            <div class="post">
              <div class="user-block">
              <a>Mission</a>
              <a href='#' class='pull-right btn-box-tool'><i class='fa fa-times'></i></a>
              </div>
              <p>
                Lorem ipsum represents a long-held tradition for designers,
                typographers and the like. Some people hate it and argue for
                its demise, but others ignore the hate as they create awesome
                tools to help create filler text for everyone from bacon lovers
                to Charlie Sheen fans.
              </p>
            </div>
          <div class="post clearfix">
            <div class='user-block'>
              <a>Vission</a>
            </div>
              <p>
                Lorem ipsum represents a long-held tradition for designers,
                typographers and the like. Some people hate it and argue for
                its demise, but others ignore the hate as they create awesome
                tools to help create filler text for everyone from bacon lovers
                to Charlie Sheen fans.
              </p>
            </div>
          </div>
        </div>
      </div>
        <% if (Company.count == 0) %>
        <%= link_to "Add Company Info", new_management_company_path(company.id), class: "btn btn-primary btn-s" %>
        <%= link_to "Edit Company Info", edit_management_company_path(company.id), class: "btn btn-primary btn-s" %>
        <%= link_to "Category", management_item_types_path, class: "btn btn-primary btn-s" %>
        <% else %>
        <%= link_to "Edit Company Info", edit_management_company_path(company.id), class: "btn btn-primary btn-s" %>
        <% end %>
      <% end %>
    </div>
  </div>
</section>
          
    