<div class="container">
			
<div class="row">
	<div class="col-md-2">
	</div>
	<div class="col-md-9">
		<div class="ui segment">
				<%= simple_form_for @company do |f|%>
					<form class="ui form">
						<div class="form-group">
						<%= f.input :company_name %>
						</div>
							<div class="form-group">
							<%= f.input :website %>
						</div>
						<div class="form-group">
							<%= f.input :telephone %>
						</div>
						<div class="form-group">
							<%= f.input :address %>
						</div>
							<button type = "submit" class = "btn btn-success">Save</button>
						</form>
				<% end %>
			</div>
		</div>
	</div>
</div>